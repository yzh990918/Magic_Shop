/* components/car-item/index.wxss */
.container{
  width: 100%;
  height: 220rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #f3f3f3;
}

.checkbox{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}
.image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.skuContainer{
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.image-container{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  position: relative;
}
.image-sold-out{
  /* 蒙层样式 文字居中 */
    background: #157658;
    position: absolute;
    height: 100%;
    width:100%;
    opacity: 0.5;
    color: #ffffff;
    border-radius: 10rpx;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
}
.image-stock-pinch{
  /* 底部售完标签文字样式*/
  position: absolute;
  width: 100%;
  height: 30rpx;
  background-color: #157658;
  opacity: 0.7;
  border-radius: 4rpx;
  color: #ffffff;
  font-size: 22rpx;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.info{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.desc{
  display: flex;
  flex-direction: row;
  line-height: 28rpx;
  margin-right: 6rpx;
  max-width: 390rpx;

}
.tag-container{
  display: flex;
  align-items: center;
}
.discount-tag{
  align-items: center;
  margin-right:16rpx;
  font-size: 18rpx;
  padding-left: 6rpx;
  padding-right:6rpx;
  width:46rpx !important;
  flex-wrap: nowrap !important;
}
.title{
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:26rpx;
  color:#333333;
  line-height: 40rpx;
}
.spec{
  line-height: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.spec-text{
  /*规格值文本样式*/
    display: inline-flex;
    padding-left:10rpx;
    padding-right:10rpx;
    flex-direction: row;
    align-items: center;
    height: 36rpx;
    background-color: #f3f3f3;
    color:#999999;
    font-size:20rpx;
}
.disabled{
  opacity: .5;
}

.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.slide{
  width: 200rpx;
  height: 220rpx;
  color: #ffffff;
  background-color:#9E2731;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}
